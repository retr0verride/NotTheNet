{
  "general": {
    "bind_ip": "0.0.0.0",
    "redirect_ip": "127.0.0.1",
    "log_dir": "logs",
    "log_level": "INFO",
    "log_to_file": true,
    "auto_iptables": true,
    "interface": "eth0",
    "iptables_mode": "loopback"
  },
  "dns": {
    "enabled": true,
    "port": 53,
    "resolve_to": "127.0.0.1",
    "ttl": 300,
    "handle_ptr": true,
    "custom_records": {}
  },
  "http": {
    "enabled": true,
    "port": 80,
    "response_code": 200,
    "response_body_file": "assets/notthenet-page.html",
    "response_body": "<html><body><h1>200 OK</h1></body></html>",
    "server_header": "Apache/2.4.51 (Debian)",
    "log_requests": true
  },
  "https": {
    "enabled": true,
    "port": 443,
    "cert_file": "certs/server.crt",
    "key_file": "certs/server.key",
    "response_code": 200,
    "response_body_file": "assets/notthenet-page.html",
    "response_body": "<html><body><h1>200 OK</h1></body></html>",
    "server_header": "Apache/2.4.51 (Debian)",
    "log_requests": true
  },
  "smtp": {
    "enabled": true,
    "port": 25,
    "hostname": "mail.example.com",
    "banner": "220 mail.example.com ESMTP Postfix",
    "save_emails": true
  },
  "pop3": {
    "enabled": true,
    "port": 110,
    "hostname": "mail.example.com"
  },
  "imap": {
    "enabled": true,
    "port": 143,
    "hostname": "mail.example.com"
  },
  "ftp": {
    "enabled": true,
    "port": 21,
    "banner": "220 FTP Server Ready",
    "allow_uploads": true,
    "upload_dir": "logs/ftp_uploads"
  },
  "catch_all": {
    "enabled": true,
    "tcp_port": 9999,
    "udp_port": 9998,
    "redirect_tcp": true,
    "redirect_udp": false,
    "excluded_ports": [22, 53, 80, 443, 25, 110, 143, 21]
  }
}
